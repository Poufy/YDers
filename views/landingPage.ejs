<!DOCTYPE html>
<html lang="en">
  <head>
    <!--Import Google Icon Font-->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!--Import materialize.css-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />

    <link rel="stylesheet" href="style.css" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="scrollspy" id="home">
      <!-- HEADER -->
      <% include partials/header %>
      <!-- END OF HEADER -->
      <!-- START OF SLIDER-->
      <div class="slider fullscreen seperator">
        <ul class="slides">
          <li>
              
            <img class="responsive-img" src="img/slider2.jpg" alt="lmao" />
            <div class="caption center-align">
              <h3 class="primaryTextColor">شعار يقشعر البدن</h3>
              <h5 class="light primaryTextColor hide-on-small-only">
                الخدمات التي نوفرها
              </h5>
              <a
                href="#contact"
                class="btn light-blue accent-3"
                style="margin-top: 20px"
              >
                تواصل معنا
              </a>
            </div>
          </li>
          <li>
            <img src="img/slider1.jpg" alt="lmao" />
            <div class="caption right-align primaryTextColor">
              <h3 class="primaryTextColor">أهدافنا</h3>
              <h5 class="light primaryTextColor hide-on-small-only">
                وحدة حرية اشتراكية
              </h5>
              <a
                href="#contact"
                class="btn light-blue accent-3"
                style=" margin-top: 20px"
              >
                قم بالتسجيل
              </a>
            </div>
          </li>
          <li>
            <img class="img3" src="img/slider3.jpg" alt="lmao" />
            <div class="caption left-align primaryTextColor">
              <h3 class="primaryTextColor">صفاتنا</h3>
              <h5 class="light primaryTextColor hide-on-small-only">
                ما شاء الله علينا كلنا حبابين ونسعى للأفضل
              </h5>
              <a
                href="#about"
                class="btn light-blue accent-3"
                style=" margin-top: 20px"
              >
                المزيد
              </a>
            </div>
          </li>
        </ul>
      </div>
      <!-- END OF SLIDER-->
      <!--CARD PANELS OF AVAIABLE TEACHERS-->
      <div class="content">
      <section
        class="section section-follow light-blue darken2 white-text center seperator scrollspy"
        id="teachers"
      >
      <h4 class="center styledHeader" style="padding-bottom: 18px">
أساتذتنا          </h4>
      <div class="container">
            <div class="row">
                <div class="col s6 m3">
                    <div class="card-panel light-blue lighten-1">
                        <img src="img/mathIcon2.png" alt="Math" style="height: 60px;width:60px"><br>
                        <h5>الرياضيات</h5>
                        <div class="mathTeachers" style="font-weight: 500;">
                            <h5 id="math_header">0</h5>
                        </div>
                    </div>
                </div>
                <div class="col s6 m3">
                        <div class="card-panel light-blue lighten-1">
                            <img src="img/chemIcon.png" alt="Math" style="height: 60px;width:60px"><br>
                            <h5>الكيمياء</h5>
                            <div class="mathTeachers" style="font-weight: 500;">
                                    <h5 id="chem_header">0</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col s6 m3">
                            <div class="card-panel light-blue lighten-1">
                                <img src="img/physIcon2.png" alt="Math" style="height: 60px;width:60px"><br>
                                <h5>الفيزياء</h5>
                                <div class="mathTeachers" style="font-weight: 500;">
                                        <h5 id="phys_header">0</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col s6 m3">
                                <div class="card-panel light-blue lighten-1">
                                    <img src="img/bioIcon2.png" alt="Math" style="height: 60px;width:60px"><br>
                                    <h5>العلوم</h5>
                                    <div class="mathTeachers" style="font-weight: 500;">
                                            <h5 id="bio_header">0</h5>
                                    </div>
                                </div>
                            </div>
            </div>
            <div class="row">
                    <div class="col s6 m3">
                        <div class="card-panel light-blue lighten-1">
                            <img src="img/arIcon.png" alt="Math" style="height: 60px;width:60px"><br>
                            <h5>العربية</h5>
                            <div class="mathTeachers" style="font-weight: 500;">
                                    <h5 id="ar_header">0</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col s6 m3">
                            <div class="card-panel light-blue lighten-1">
                                <img src="img/engIcon2.png" alt="Math" style="height: 60px;width:60px"><br>
                                <h5>الإنجليزية</h5>
                                <div class="mathTeachers" style="font-weight: 500;">
                                        <h5 id="eng_header">0</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col s6 m3">
                                <div class="card-panel light-blue lighten-1">
                                    <img src="img/frenIcon.png" alt="Math" style="height: 60px;width:60px"><br>
                                    <h5>الفرنسية</h5>
                                    <div class="mathTeachers" style="font-weight: 500;">
                                            <h5 id="fr_header">0</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="col s6 m3">
                                    <div class="card-panel light-blue lighten-1">
                                        <img src="img/geoIcon.png" alt="Math" style="height: 60px;width:60px"><br>
                                        <h5>الجغرافية</h5>
                                        <div class="mathTeachers" style="font-weight: 500;">
                                                <h5 id="geo_header">0</h5>
                                        </div>
                                    </div>
                                </div>
                </div>
          </div>
        </section>
        <!--START OF FORM-->
        <section class="section section-follow light-blue darken2 white-text center seperator scrollspy" id="apply">
                <img src="img/form.png" style="width:50px;height:50px">
            <h4 class="titles">ملئ الطلب</h4>
            <hr style="width: 50%;margin:auto">
                    <h5 class="center titles">المدينة</h5>
                    <img src="img/city.png" alt="City" style="height: 50px;width: 50px">
            <div class="container">
            <div class="input-field col s12 input-form">
                    <select id="city-select">
                      <option value="" disabled selected>إختر مدينتك</option>
                      <option value="dms">دمشق</option>
                      <option value="alp">حلب</option>
                    </select>
            </div>
        </div>
        <hr style="width: 50%;margin:auto">
            <h5 class="center titles">المادة</h5>
            <img src="img/subject.png" alt="city" style="height: 50px;width: 50px">
            <div class="container">
            <div class="input-field col s12 input-form">
                    <select>
                      <option value="" disabled selected> المادة</option>
                      <option value="math">الرياضيات</option>
                      <option value="physics">الفيزياء</option>
                      <option value="chemistry">الكيمياء</option>
                      <option value="biology">العلوم</option>
                      <option value="arabic">العربية</option>
                      <option value="english">الإنجليزية</option>
                      <option value="french">الفرنسية</option>
                      <option value="geography">الجغرافية</option>
                    </select>
            </div>
        </div>
        <hr style="width: 50%;margin:auto">
            <h5 class="center titles">الوقت</h5>
            <img src="img/time.png" alt="time" style="height: 50px;width: 50px">
        <div class="container">
                <div class="col s12">
                        <select id="time-select">
                        </select>
                </div>
            </div>
        </section>
        <% include partials/footer %>
      </div>
    </div>
    </div>
    
  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="/javascript/fetchingHeaders.js"></script>
  <script src="/javascript/selectionFiltering.js"></script>
    
  
  <script>
    var elems = document.querySelectorAll(".slider");
    var instances = M.Slider.init(elems, {
      indicators: true
    });
  </script>
  <script>document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('.scrollspy');
        var instances = M.ScrollSpy.init(elems, {});
      });</script>
      <script>
       document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('select');
    var instances = M.FormSelect.init(elems, {});
  });</script>
</html>
